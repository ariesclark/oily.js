{
  "include": ["src"],
  "compilerOptions": {
    "types": ["bun-types"],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es2022",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "strict": true
  }
}